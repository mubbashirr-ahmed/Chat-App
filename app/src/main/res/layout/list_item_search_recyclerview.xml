<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile_search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/name_item_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@id/image_profile_search"
        android:fontFamily="@font/nunito_semibold"
        android:text="Ali Ahmed"
        android:textColor="#999999"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_item_search"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/image_profile_search"
        android:fontFamily="sans-serif"
        android:text="Hi There, This is Ali"
        android:textColor="#999999"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/status_text"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/status_text"
        app:srcCompat="@drawable/chat" />


</RelativeLayout>